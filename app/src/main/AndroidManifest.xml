<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RepairBooking"
        tools:targetApi="31">

        <!-- Declare RegisterActivity -->
        <activity android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RegisterActivity" />


        <activity android:name=".HomeActivity">
            <!-- Optionally, set it as the activity that comes after LoginActivity -->
        </activity>

        <activity
            android:name=".ClientDashboardActivity"
            android:exported="true"
            android:label="Client Dashboard" />

        <activity
            android:name=".DisclaimerActivity"
            android:exported="false"
            android:label="Disclaimer" />

        <activity
            android:name=".AppointmentConfirmationActivity"
            android:exported="false"
            android:label="Confirmation" />

        <activity android:name=".TrackRepairActivity" />

        <activity android:name=".AdminDashboardActivity" />

        <activity android:name=".TechnicianDashboardActivity" />

        <activity android:name=".AppointmentDetailsActivity" />


        <!-- Other activities can be added here -->

    </application>
</manifest>